<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' type='text/css' href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
        <title>Contacts</title>
    </head>
    <body>
        <div class="container">
            <h1>Contacts:</h1>
            {% if contacts is not empty %}
                {% for contact in contacts %}
                    <p>{{contact.get('name')}}</p>
                    <li>{{contact.get('number')}}</li>
                    <li>{{contact.get('address')}}</li>
                {% endfor %}
            {% endif %}
            <br>
            <br>
            <br>
            <br>
            <form action="/create" method="post">
                <label for="new_contact">Enter new contact here</label>
                <input type="text" name="name" placeholder="Name">
                <input type="text" name="number" placeholder="Phone Number">
                <input type="text" name="address" placeholder="Address">
                <button type="submit" class="btn">Add new contact</button>
            </form>
            <br>
            <br>
            <br>
            <br>
            <form action="/fresh" method="post">
                <button type="submit" name="button">Remove all contacts</button>
            </form>
        </div>
    </body>
</html>
